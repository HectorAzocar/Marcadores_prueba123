<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Nombe de la categoria" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :public, "¿La categoria es publica?" %>
    <%= form.check_box :public %>
  </div>

  <div class="field">
    <%= form.label :category_id, "¿La categoria pertene a alguna otra? Si ese es el caso, escribe el id de la categoria principal." %>
    <%= form.text_field :category_id %>
  </div>

  <div class="actions">
    <%= form.submit 'submit', class: "btn btn-light" %>
  </div>
<% end %>
