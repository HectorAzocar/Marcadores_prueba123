<p id="notice"><%= notice %></p>

<h1 class="text-center my-5">Tipos de Archivos</h1>

<table class="table table-bordered table-secondary">
  <thead class="bg-warning text-dark">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th colspan="5" class="text-dark">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td> <%= type.id %> </td>
        <td><%= type.name %></td>
        <td><%= link_to "Ver", type %></td>
        <td><%= link_to 'Editar', edit_type_path(type) %></td>
        <td><%= link_to 'Eliminar', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3 class="text-center my-4">Grafico de marcadores</h3>
<%= pie_chart @bookmarks.group(:type_id).count %>

<%= link_to "Volver atras", root_path, class: "btn btn-warning" %>
<%= link_to 'Crear nuevo tipo', new_type_path, class: "btn btn-warning" %>
